#include <stdio.h>

int main() {
    int r1, c1, r2, c2;

    // Input matrix sizes
    printf("Enter rows and columns of first matrix: ");
    scanf("%d %d", &r1, &c1);

    printf("Enter rows and columns of second matrix: ");
    scanf("%d %d", &r2, &c2);

    int A[r1][c1], B[r2][c2], C[r1][c1], M[r1][c2];

    // Input matrices
    printf("\nEnter elements of Matrix A:\n");
    for (int i = 0; i < r1; i++)
        for (int j = 0; j < c1; j++)
            scanf("%d", &A[i][j]);

    printf("\nEnter elements of Matrix B:\n");
    for (int i = 0; i < r2; i++)
        for (int j = 0; j < c2; j++)
            scanf("%d", &B[i][j]);

    // -------------------------
    // MATRIX ADDITION
    // -------------------------
    if (r1 == r2 && c1 == c2) {
        printf("\nMatrix Addition (A + B):\n");
        for (int i = 0; i < r1; i++) {
            for (int j = 0; j < c1; j++) {
                C[i][j] = A[i][j] + B[i][j];
                printf("%d ", C[i][j]);
            }
            printf("\n");
        }
    } else {
        printf("\nAddition not possible (matrix sizes must match)\n");
    }

    // -------------------------
    // MATRIX SUBTRACTION
    // -------------------------
    if (r1 == r2 && c1 == c2) {
        printf("\nMatrix Subtraction (A - B):\n");
        for (int i = 0; i < r1; i++) {
            for (int j = 0; j < c1; j++) {
                C[i][j] = A[i][j] - B[i][j];
                printf("%d ", C[i][j]);
            }
            printf("\n");
        }
    } else {
        printf("\nSubtraction not possible (matrix sizes must match)\n");
    }

    // -------------------------
    // MATRIX MULTIPLICATION
    // -------------------------
    if (c1 == r2) {
        printf("\nMatrix Multiplication (A Ã— B):\n");
        for (int i = 0; i < r1; i++) {
            for (int j = 0; j < c2; j++) {
                M[i][j] = 0;
                for (int k = 0; k < c1; k++) {
                    M[i][j] += A[i][k] * B[k][j];
                }
                printf("%d ", M[i][j]);
            }
            printf("\n");
        }
    } else {
        printf("\nMultiplication not possible (columns of A must equal rows of B)\n");
    }

    return 0;
}
