#include <stdio.h>

int main() {
    int matrix[4][4];
    int array[16];
    int i, j, k = 0;

    printf("Enter 16 elements:\n");
    for (i = 0; i < 4; i++) {
        for (j = 0; j < 4; j++) {
            scanf("%d", &matrix[i][j]);
            array[k++] = matrix[i][j];
        }
    }

    for (i = 0; i < 16; i++) {
        for (j = 0; j < 15 - i; j++) {
            if (array[j] > array[j + 1]) {
                int temp = array[j];
                array[j] = array[j + 1];
                array[j + 1] = temp;
            }
        }
    }

    printf("\nSorted array:\n");
    for (i = 0; i < 16; i++)
        printf("%d ", array[i]);

    return 0;
}
