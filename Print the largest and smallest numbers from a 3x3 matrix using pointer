#include <stdio.h>

int main() {
    int matrix[3][3];
    int *ptr = &matrix[0][0];  // Pointer to the first element
    int i, j;

    // Input 3x3 matrix
    printf("Enter 9 elements for the 3x3 matrix:\n");
    for (i = 0; i < 3; i++) {
        for (j = 0; j < 3; j++) {
            scanf("%d", &matrix[i][j]);
        }
    }

    // Initialize largest and smallest using pointer
    int largest = *ptr;
    int smallest = *ptr;

    // Loop through all 9 elements using pointer
    for (i = 0; i < 9; i++) {
        if (*(ptr + i) > largest)
            largest = *(ptr + i);

        if (*(ptr + i) < smallest)
            smallest = *(ptr + i);
    }

    // Output results
    printf("\nLargest number = %d\n", largest);
    printf("Smallest number = %d\n", smallest);

    return 0;
}
