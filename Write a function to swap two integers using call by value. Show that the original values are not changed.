#include <stdio.h>

void swap(int a, int b) {
    int temp;

    printf("\nInside function BEFORE swap: a = %d, b = %d", a, b);

    temp = a;
    a = b;
    b = temp;

    printf("\nInside function AFTER swap:  a = %d, b = %d\n", a, b);
}

int main() {
    int x, y;

    printf("Enter two integers: ");
    scanf("%d %d", &x, &y);

    printf("\nBefore calling swap function: x = %d, y = %d", x, y);

    swap(x, y);   // Call by value (copies are passed)

    printf("\nAfter calling swap function:  x = %d, y = %d\n", x, y);

    return 0;
}
